<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgRecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp102"
        android:background="@drawable/bg_after_click"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <ImageView
        android:src="@drawable/baseline_check_24"
        android:id="@+id/imgRecyclerAfter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp102"
        android:background="@drawable/bg_befor_clicked"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgRecycler"
        app:layout_constraintEnd_toEndOf="@+id/imgRecycler"
        app:layout_constraintStart_toStartOf="@+id/imgRecycler"
        app:layout_constraintTop_toTopOf="@+id/imgRecycler" />

</androidx.constraintlayout.widget.ConstraintLayout>